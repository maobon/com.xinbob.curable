<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:gravity="center"
    app:cardCornerRadius="5dp">

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <RadioButton
            android:id="@+id/rb_mood_1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/selector_very_dissatisfied"
            android:button="@android:color/transparent" />

        <RadioButton
            android:id="@+id/rb_mood_2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/selector_dissatisfied"
            android:button="@android:color/transparent" />

        <RadioButton
            android:id="@+id/rb_mood_3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/selector_neutral"
            android:button="@android:color/transparent" />

        <RadioButton
            android:id="@+id/rb_mood_4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/selector_satisfied"
            android:button="@android:color/transparent" />

        <RadioButton
            android:id="@+id/rb_mood_5"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/selector_very_satisfied"
            android:button="@android:color/transparent" />
    </RadioGroup>

</android.support.v7.widget.CardView>